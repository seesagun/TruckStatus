<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECECEC">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="20"
        android:background="@drawable/menuback"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:textColor="#00a6ff"
            android:fontFamily="@font/thsarabunnew"
            android:textStyle="bold"
            android:text=""
            android:textSize="17sp"
            android:layout_weight="1"/>

        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="70dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/companynamelogo"
                android:layout_weight="15"
                android:contentDescription="Logo Program" />

        <ImageView
            android:id="@+id/check_pass_logout"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/whiteback"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Barcode Id:"
                        android:fontFamily="@font/thsarabunnew"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="35dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ทะเบียนรถ:"
                    android:fontFamily="@font/thsarabunnew"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:textColor="#000000"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="20">
                    <TextView
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/numberTKT"
                        android:fontFamily="@font/thsarabunnew"
                        android:textSize="35dp"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="5dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/back"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:fontFamily="@font/thsarabunnew"
                        android:textSize="20dp"
                        android:textColor="#E00000"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="5dp"
                        android:inputType="textEmailAddress"
                        android:layout_weight="18"
                        />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="20">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="กง"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/thsarabunnew"
                    android:textColor="#000000"
                    android:textSize="35dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/back"
                    android:layout_weight="5"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"
                    android:inputType="text"
                    android:fontFamily="@font/thsarabunnew"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:layout_weight="6"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/licensePlate"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/thsarabunnew"
                    android:textColor="#000000"
                    android:textSize="35dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/back"
                    android:layout_weight="3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/thsarabunnew"
                    android:textStyle="bold"
                    android:textColor="#E00000"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="6"
                    />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/submitback"
            android:text="@string/submitBtn"
            android:fontFamily="@font/thsarabunnew"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:orientation="vertical"
        android:padding="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/cancelback"
            android:text="@string/cancelBtn"
            android:fontFamily="@font/thsarabunnew"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whiteback"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/main_status_txt"
            android:fontFamily="@font/thsarabunnew"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/orgback"
            android:fontFamily="@font/thsarabunnew"
            android:gravity="center"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:text="@string/main_error"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/main_msg_error"
            android:fontFamily="@font/thsarabunnew"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
    </LinearLayout>

    </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</layout>